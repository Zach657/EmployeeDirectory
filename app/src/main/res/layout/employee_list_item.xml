<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="3sp"
    android:paddingRight="3sp"
    android:paddingLeft="3sp"
    android:layout_marginTop="2sp"
    android:layout_marginBottom="2sp">

    <ImageView
        android:id="@+id/headshot"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:cropToPadding="false"
        android:padding="6sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/placeholder_headshot" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/headshot"
        app:layout_constraintTop_toTopOf="@+id/headshot"/>

    <TextView
        android:id="@+id/team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team"
        android:textSize="16sp"
        android:textAlignment="viewEnd"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name"/>

    <TextView
        android:id="@+id/emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email@gmail.com"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toEndOf="@+id/headshot"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/employmentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="FULL_TIME"
        android:textSize="14sp"
        android:textAlignment="viewEnd"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>